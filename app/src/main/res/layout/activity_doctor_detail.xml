<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FF">

    <!-- ScrollView để chứa toàn bộ nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Top wave shape decoration with gradient -->
            <View
                android:id="@+id/viewTopWave"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/top_wave_bg"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- CardView for doctor info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDoctorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="80dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Ảnh đại diện bác sĩ với viền tròn -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivDoctorAvatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/default_avatar"
                        android:scaleType="centerCrop"
                        app:strokeWidth="2dp"
                        app:strokeColor="#18A76A"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Thông tin bác sĩ -->
                    <TextView
                        android:id="@+id/tvDoctorName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="THS.BS CHU THỊ MINH"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@id/ivDoctorAvatar"
                        app:layout_constraintStart_toEndOf="@id/ivDoctorAvatar"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Chuyên khoa với icon -->
                    <ImageView
                        android:id="@+id/ivSpecialtyIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_specialty"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                        app:layout_constraintStart_toEndOf="@id/ivDoctorAvatar"/>

                    <TextView
                        android:id="@+id/tvDoctorSpecialty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chuyên khoa Lao và bệnh phổi"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@id/ivSpecialtyIcon"
                        app:layout_constraintBottom_toBottomOf="@id/ivSpecialtyIcon"
                        app:layout_constraintStart_toEndOf="@id/ivSpecialtyIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Nơi công tác với icon -->
                    <ImageView
                        android:id="@+id/ivHospitalIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_hospital"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvDoctorSpecialty"
                        app:layout_constraintStart_toEndOf="@id/ivDoctorAvatar"/>

                    <TextView
                        android:id="@+id/tvDoctorWorkplace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="NGỎ HẸP"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@id/ivHospitalIcon"
                        app:layout_constraintBottom_toBottomOf="@id/ivHospitalIcon"
                        app:layout_constraintStart_toEndOf="@id/ivHospitalIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for workplace information -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWorkplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardDoctorInfo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nơi công tác"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tvWorkplaceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bệnh viện Tràng An"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nơi tư vấn online"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/tvOnlineConsultationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bác Sĩ Ở - Phòng Khám 020"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="24dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for experience -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardWorkplace">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_experience"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                    android:id="@+id/tvExperienceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quá trình công tác"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />

                    <!-- Timeline style experience list -->
                    <LinearLayout
                        android:id="@+id/llExperienceList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <!-- Kinh nghiệm 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/circle_background"
                                android:backgroundTint="#18A76A"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2015-2024"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#18A76A"/>

                                <TextView
                                    android:id="@+id/tvExperience1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bác sỹ khoa Khám bệnh tại BV Phổi trung ương"
                                    android:textSize="16sp"
                                    android:textColor="#333333"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Kinh nghiệm 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/circle_background"
                                android:backgroundTint="#18A76A"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2024-Hiện nay"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#18A76A"/>

                                <TextView
                                    android:id="@+id/tvExperience2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bác sỹ khoa Khám bệnh tại Bệnh viện Tràng An"
                                    android:textSize="16sp"
                                    android:textColor="#333333"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for clinic address -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardClinicAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardExperience">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clinic"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvClinicAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bác Sĩ Ở - Phòng Khám 020"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/tvClinicAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phòng B19 - Tô học Y tế Chất lượng cao Mediplus, 99 Tân Mai, Tân Mai, Hoàng Mai, Thành phố Hà Nội"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="24dp"/>

                    <!-- Map preview -->
                    <ImageView
                        android:id="@+id/ivMapPreview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/round_image_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardClinicAddress">

                <!-- Nút Tư vấn trực tuyến -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConsultOnline"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Tư vấn trực tuyến"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#18A76A"
                    android:textColor="@android:color/white"
                    app:cornerRadius="10dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>